<h1>Edit Product</h1>

<%= form_for @product, :url => {:action => "update", :id => @product} do |f| %>

  <p>Title: <%= f.text_field 'title' %></p>
  <p>Price: <%= f.text_field 'price' %></p>

  <p>Country: <%= f.collection_select :country_id, Country.all, :id, :title %></p>
  <p>Category: <%= f.collection_select :category_id, Category.all, :id, :title %> </p>


  <%= f.submit "Save Changes" %>

<% end %>

<%= link_to 'Back', :action => 'list' %>